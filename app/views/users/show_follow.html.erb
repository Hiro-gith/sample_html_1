<% provide(:title, @title) %>
<%= render 'static_pages/arazin-top-menu'%>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <p><%= @user.name %></p>
      <p class="return-kaiin"><%= link_to "会員ページに戻る", @user %></p>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3 class="follow-title"><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
        <li>
          <%= gravatar_for user, size: 50 %>
          <%= link_to user.name, user %>
        </li>
        <% end %>
       
      </ul>
      <div class="paginate"><%= paginate @users %></div>
    <% end %>
  </div>
</div>