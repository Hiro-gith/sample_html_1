<!--プロフィール（会員情報）-->
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= link_to "Settings", edit_user_path(current_user) %>
        <%= link_to "商品新規登録",new_items_path %>

      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <!--アイテムがあれば-->
    <% if @user.items.any? %>
      <!--アイテム数-->
      <h3>アイテム (<%= @user.items.count %>)</h3>
      <ol class="items">
        <%= render "items/items" %>
      </ol>
    <% end %>
  </div>
</div>