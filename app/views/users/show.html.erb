<!--プロフィール（会員情報）-->
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= link_to "Settings", edit_user_path(current_user) %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <!--アイテムがあれば-->
    <% if @user.items.any? %>
      <!--アイテム数-->
      <h3>アイテム (<%= @user.items.count %>)</h3>
      <ol class="items">
        <%= render @itemss %>
      </ol>
      <div class="paginate"><%= paginate @users %></div>
    <% end %>
  </div>
</div>