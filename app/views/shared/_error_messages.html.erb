<!--エラーがあったときにメッセージを出力する-->

<!--エラーがあるなら-->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      
      <!--pluralizeは引数が複数ならsをつけるメソッド　5errors-->
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>