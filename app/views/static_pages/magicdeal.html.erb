<!--マジックディール-->
<% provide(:title, "Magicdeal") %>
<%= render 'static_pages/arazin-navbar' %>
<%= render 'static_pages/arazin-top-menu'%>
<div class="row">
  <aside class="col-md-3">
    <section class="side_info">
      <%= render 'static_pages/arazin-side-menu'%>
    </section>
  </aside>
  
  <div class="col-md-9">
    <h3 class="magic-title">マジックディール</h3>
    <div class = "magic-range">
    <p class="magic-point-comment">40%ポイントバックのアイテムをピックアップ！</p>
      <div class="row">
      
      <% i=1 %>
       <% @items.each do |item| %>
         <% if item.spoint == 40 && i<=8 %>
         <%i +=1%>
            <div class="col-md-3">
              <%= link_to item ,class:"slick1-image1" do %>
                <p class="slick-spoint"><%=item.spoint%>%ポイントバック</p>
                <%= image_tag (item.picture.url),class:"magic-image"%>
                <p class="slick-name"><%=item.name%></p>
                <p class="slick-price"><%=item.price%>円</p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
      <div class = "magic-range">
        <p class="magic-point-comment">30%ポイントバックのアイテムをピックアップ！</p>
        <div class="row">
          <% i=1 %>
          <% @items.each do |item| %>
            <% if item.spoint == 30 && i<=8 %>
              <%i +=1%>
              <div class="col-md-3">
                <%= link_to item ,class:"slick1-image1" do %>
                  <p class="slick-spoint"><%=item.spoint%>%ポイントバック</p>
                  <%= image_tag (item.picture.url),class:"magic-image"%>
                  <p class="slick-name"><%=item.name%></p>
                  <p class="slick-price"><%=item.price%>円</p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div> 
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>