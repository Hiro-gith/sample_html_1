<!--商品編集画面-->
<% provide(:title, 'item-edit') %>

<div class="row justify-content-center">
  <div class="col-md-6 ">
    <div class="item-create-form">
      <p class="item-create">商品内容の変更</p>
      <%= form_for(@item) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
  
        <p class="item-create-label">商品名</p>
        <%= f.text_field :name, class: 'form-control' %>
  
        <p class="item-create-label">カテゴリ</p>
        <%= f.select :category, [ ["家電"], ["本"], ["食品"] ] , prompt: "カテゴリを選択してください" %>
  
        <p class="item-create-label">価格</p>
        <%= f.number_field :price, class: 'form-control' %>
        
        <p class="item-create-label">内容</p>
        <%= f.text_field :content, class: 'form-control' %>
        
        <p class="item-create-label">画像</p>
        <p><ファイルサイズは5MB以内。ファイル形式はjpg・jpeg・gif・png・jfifのみ可能です></p>
         <span class="picture">
           <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,image/jfif' %>
        </span>
  
        <%= f.submit "変更内容を保存", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>